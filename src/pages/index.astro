    <BioMega />

    <div class="mt-10 sm:mt-24">
      <div class="flex max-w-3xl flex-col">
        {
          posts.map((post) => (
            <Card
              slug={`blog/${post.slug}`}
              title={post.data.title}
              date={post.data.pubDate}
              teaser={post.data.teaser}
            />
          ))
        }
      </div>
    </div>
  </Container>
