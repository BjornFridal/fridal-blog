---
import Container from './Containers/Container.astro';

const links = [
  {
    url: '/',
    label: 'Blog'
  },
  {
    url: '/resume',
    label: 'Resume'
  },
  {
    url: 'mailto:bjorn@fridal.dk',
    label: 'Contact'
  }
];
---

<header class="relative z-50 flex flex-none flex-col">
  <div class="top-0 z-10 h-16 pt-6">
    <Container>
      <div class="relative flex gap-4">
        <div class="flex flex-1">
          <div class="">
            <a
              href="/"
              class="font-bold text-sm inline-block cursor-pointer tracking-widest text-black hover:text-slate-500 transition-colors duration-200"
              >FRIDAL
            </a>
          </div>
        </div>

        <nav class="flex items-center justify-end space-x-4">
          {
            links.map(({ url, label }) => (
              <a
                href={url}
                class="text-xs uppercase font-medium text-black hover:text-slate-500 transition-colors duration-200"
              >
                {label}
              </a>
            ))
          }
        </nav>

        <!-- <SocialIcons /> -->
      </div>
    </Container>
  </div>
</header>
