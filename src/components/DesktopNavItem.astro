---
interface Props {
  isActive?: boolean;
  href?: string;
}

const { href, isActive } = Astro.props;
---

<li>
  <a
    href={href}
    class:list={[
      'relative block px-3 py-2 transition',
      isActive ? 'text-teal-500' : 'hover:text-teal-500'
    ]}
  >
    <slot />
    {
      isActive && (
        <span class="absolute inset-x-1 -bottom-px h-px bg-gradient-to-r from-teal-500/0 via-teal-500/40 to-teal-500/0" />
      )
    }
  </a>
</li>
